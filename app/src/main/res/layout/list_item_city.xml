<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/city_list_item_height"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_marginLeft="@dimen/city_list_item_margin"
        android:textSize="@dimen/city_list_item_text_size"
        android:text="福州"/>

    <TextView
        android:id="@+id/tv_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/city_list_item_text_small_size"
        android:text="@string/allocated_in"/>

    <TextView
        android:id="@+id/tv_region_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:layout_marginLeft="@dimen/city_list_item_margin"
        android:textSize="@dimen/city_list_item_text_size"
        android:text="福建"/>

</LinearLayout>